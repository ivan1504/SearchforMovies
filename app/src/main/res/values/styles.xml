<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fab">
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginBottom">64dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:backgroundTint">@color/fabBackground</item>
    </style>
    <style name="textstyle">
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginStart">210dp</item>
        <item name="android:textColor">#10B9BF</item>
        <item name="android:textSize">24sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_alignParentStart">true</item>

    </style>
    <style name="viewstyle">
        <item name="android:layout_marginStart">28dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="contentDescription">@string/todo</item>
    </style>
    <style name="buttonstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">210dp</item>
        <item name="android:layout_marginTop">180dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>

    </style>


</resources>